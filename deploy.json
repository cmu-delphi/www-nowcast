{
  "type": "delphi deploy config",
  "version": 1,
  "actions": [
    {
      "type": "compile-coffee",
      "src": "site/app.coffee",
      "dst": "site/app.coffee_js"
    },
    {
      "type": "minimize-js",
      "src": "site/app.coffee_js",
      "dst": "site/app.coffee_js_min"
    },
    {
      "type": "minimize-js",
      "src": "site/geodata.js",
      "dst": "site/geodata.js_min"
    },
    {
      "type": "copy",
      "src": "site/index.html",
      "dst": "/var/www/html/nowcast/index.html",
      "replace-keywords": [
        "values/strings.json",
        "values/colors.json"
      ],
      "add-header-comment": true
    },
    {
      "type": "copy",
      "src": "site/style.css",
      "dst": "/var/www/html/nowcast/style.css",
      "add-header-comment": true
    },
    {
      "type": "copy",
      "src": "site/geodata.js_min",
      "dst": "/var/www/html/nowcast/geodata.js",
      "add-header-comment": true
    },
    {
      "type": "copy",
      "src": "site/app.coffee_js_min",
      "dst": "/var/www/html/nowcast/app.js",
      "add-header-comment": true
    }
  ]
}
